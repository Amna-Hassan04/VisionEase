{
    "manifest_version": 3,
    "name": "Text-to-Speech Extension",
    "version": "1.1",
    "description": "A Chrome extension to read selected text aloud using Text-to-Speech.",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        
      }
    }
  }
  